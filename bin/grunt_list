#!/bin/env bash
source $HOME/gruntvars_dir.sh
source $HOME/gruntvars_name.sh


dirArray=()
nameArray=()
aliasArray=()

	
	for line in $(cat $HOME/gruntvars_alias)
		do
			dirVal="grunt_dir_$line"
			nameVal="grunt_name_$line"

			#aliasArray+="$line\n"
			#dirArray+="${!dirVal}\n"
			#nameArray+="${!nameVal}\n"

			rowsArray+="$line :|: ${!nameVal} :|: ${!dirVal}\n"

		done

headers="PROJECT ALIAS :|: PROJECT NAME :|: GRUNT LOCAL DIRECTORY"
dividers="--------------- :|: ------------------------------------- :|: -----------------------------------------------------"
sep=":"

outputTable="$dividers\n$headers\n$dividers\n$rowsArray\n$dividers"

echo
echo -ne $outputTable | column -t -s "$sep"
echo
